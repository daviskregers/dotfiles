echo "Checking for oh-my-zsh installation"
if [ ! -d "~/.oh-my-zsh" ]; then
	curl -L http://install.ohmyz.sh | sh
else
	echo "Already installed"
fi

ln -sfv ~/.dotfiles/configuration/.zshrc ~

if [ $SHELL != $(which zsh) ]; then
	chsh -s $(which zsh)
else
	echo "ZSH already set as default shell"
fi
