#!/bin/bash
brew install --cask docker

brew tap homebrew/cask-fonts
brew install --cask font-fira-code
brew install --cask font-jetbrains-mono-nerd-font
brew install --cask font-fira-code-nerd-font

# iterm
brew install --cask iterm2
git clone https://github.com/kkga/nibar $HOME/Library/Application\ Support/?bersicht/widgets/nibar
# tmux
brew install tmux
ln -sfv ~/.dotfiles/configuration/.tmux.conf ~
brew install reattach-to-user-namespace

# neovim
brew install neovim
mkdir ~/.config
ln -sfv ~/.dotfiles/configuration/nvim ~/.config/nvim
brew install ripgrep

# python3
brew install --cask dbeaver-community
brew install nodejs yarn
brew install php composer
brew install python3
gem install --user neovim vim-flavor
pip3 install --user --upgrade neovim pynvim pylint pillow

# uebersicht
brew install --cask ubersicht
git clone https://github.com/Jean-Tinland/simple-bar $HOME/Library/Application\ Support/Ãœbersicht/widgets/simple-bar

# ksh
brew install koekeishiya/formulae/skhd
brew services start skhd

brew install jq

source $DOTFILES/scripts/Shared/005_neovim
