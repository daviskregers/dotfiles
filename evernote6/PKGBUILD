# Maintainer: Dāvis Krēgers <daviskregers@protonmail.com>
pkgname="evernote"
pkgmajorver="win6"
pkgver="6.19.2.8555"
pkgrel=1
epoch=
pkgdesc="Evernote 6, installs with wine"
arch=("x86_64")
url="http://evernote.com"
license=('unknown')
groups=()
depends=('wine' 'wine_gecko' 'gnutls' 'lib32-gnutls')
makedepends=()
checkdepends=()
optdepends=('xembedsniproxy: for tray icon under KDE Plasma')
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=(evernote "Setup.exe::http://cdn1.$pkgname.com/${pkgmajorver}/public/Evernote_${pkgver}.exe")
noextract=("Setup.exe")
sha256sums=(
	'f0633acb9b984aa7c998e3b01f4a3bc4d62d81888e81eb11a46f59b2c6231ba8'  # evernote
	'c38f178399cbd50d39b5941a1300d3737da2224d77f349eb6dbc4912aaef1115'  # Setup.exe
)

package() {
	install -d -m755 "$pkgdir"/usr/share/evernote
	cp -raL "$srcdir"/Setup.exe "$pkgdir"/usr/share/evernote
	install -d -m755 "$pkgdir"/usr/bin
	install -m755 evernote "$pkgdir"/usr/bin
}
