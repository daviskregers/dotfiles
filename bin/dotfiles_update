#!/bin/bash

cd $DOTFILES
source .bash_helpers
git remote update

include ~/.override_variables

if [[ $(git status | grep "up to date") = "" ]]; then
    echo -e $SEPARATOR
    echo -e "${RED}Dotfiles have been changed, make sure to commit & push!$END"
    echo -e $SEPARATOR
    git status
    CONTINUE=$(confirmation)
    if [[ $CONTINUE != 1 ]]; then
        exit 1;
    fi
fi

git pull

echo $DOTFILES_LAUNCH_CLI_UPDATE
if [[ "${DOTFILES_LAUNCH_CLI_UPDATE}" == "on" ]]; then
    source ./configure-cli.sh
else
    source ./configure-user.sh
fi
