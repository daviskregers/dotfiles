#!/bin/bash

cd $DOTFILES
source .bash_helpers

if ! git diff-index --quiet HEAD --; then
    echo -e $SEPARATOR
    echo -e "${RED}Dotfiles have been changed, make sure to commit & push!$END"
    echo -e $SEPARATOR
    CONTINUE=$(confirmation)
    if [[ $CONTINUE != 1 ]]; then
        exit 1;
    fi
fi

git pull
source ./configure-user.sh
