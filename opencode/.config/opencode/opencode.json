{
  "$schema": "https://opencode.ai/config.json",
  "tools": {
    "bash": false,
    "edit": false,
    "glob": true,
    "grep": true,
    "list": true,
    "patch": false,
    "read": true,
    "todoread": true,
    "todowrite": true,
    "webfetch": true,
    "write": false
  },
  "agent": {
    "build": {
      "disable": true
    },
    "plan": {
      "disable": true
    },
    "researcher": {
      "mode": "primary",
      "description": "Pure research and analysis agent that reads code and searches web without making any changes",
      "prompt": "{file:./prompts/researcher.md}",
      "temperature": 0.1,
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "webfetch": true
      }
    },
  }
}
