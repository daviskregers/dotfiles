{
  "$schema": "https://opencode.ai/config.json",
  "model": "github-copilot/claude-sonnet",
  "agent": {
    "tutor": {
      "mode": "primary",
      "description": "tutor based on https://www.theneuron.ai/explainer-articles/your-brain-on-ai-is-literally-shrinking-and-how-to-fix-it",
      "prompt": "{file:./prompts/tutor.md}",
      "temperature": 0.1,
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "webfetch": true
      }
    },
    "agent": {
      "hidden": true,
      "disable": false,
      "mode": "primary",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true,
        "webfetch": true
      }
    },
    "build": {
      "disable": false
    },
    "plan": {
      "disable": false
    }
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp"
      ],
      "enabled": true
    },
    "btca-local": {
      "type": "local",
      "command": [
        "bunx",
        "btca",
        "mcp"
      ],
      "enabled": true
    }
  },
  "plugin": [
    "@plannotator/opencode@latest"
  ]
}
