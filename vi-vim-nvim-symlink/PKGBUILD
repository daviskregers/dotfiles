pkgname='vi-vim-nvim-symlink'
pkgver='1'
pkgrel='2'
pkgdesc='Replace vi, vim with nvim'
arch=('any')
url='http://www.vim.org'
license=('CDDL')
depends=('neovim')
provides=('vi' 'vim')
conflicts=('vi' 'vim')

package() {
  set -u
  install -d "${pkgdir}/usr/bin"
  install -d "${pkgdir}/usr/share/man/man1"
  local _file
  for _file in 'edit' 'ex' 'vedit' 'vi' 'view' 'vim'; do
    ln -sf 'nvim' "${pkgdir}/usr/bin/${_file}"
    ln -sf 'nvim.1.gz' "${pkgdir}/usr/share/man/man1/${_file}.1.gz"
  done
  set +u
}
